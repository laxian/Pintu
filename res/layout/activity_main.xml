<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pintu.MainActivity" >

    <com.example.pintu.view.GamePintuLayout
        android:id="@+id/gly"
        android:layout_below="@+id/score_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.example.pintu.view.GamePintuLayout>
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_panel"
        android:layout_margin="3dp"
        >
        
        <TextView 
            android:id="@+id/id_level"
            android:layout_alignParentLeft="true"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="lv0"
            android:background="@drawable/textbg"
                      />
        
        
        <TextView 
            android:id="@+id/id_score"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:padding="4dp"
            android:text="0"
            android:background="@drawable/textbg"
                      />
        
        <TextView 
            android:id="@+id/id_time"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="120"
            android:background="@drawable/textbg"
                      />
        
        
    </RelativeLayout>
    
    
        
    <RelativeLayout 
        android:layout_below="@+id/gly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/control_panel"
        android:layout_margin="3dp"
        >
        
        <TextView 
            android:id="@+id/id_new"
            android:layout_alignParentLeft="true"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="new"
            android:background="@drawable/textbg"
                      />
        
        
        <TextView 
            android:id="@+id/id_pause"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:padding="4dp"
            android:text="开始"
            android:background="@drawable/textbg"
                      />
        
        <TextView 
            android:id="@+id/id_next"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="next"
            android:background="@drawable/textbg"
                      />
        
        
    </RelativeLayout>

</RelativeLayout>
