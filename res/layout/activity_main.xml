<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pintu.MainActivity" >

    <com.example.pintu.view.GamePintuLayout
        android:id="@+id/gly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_panel" >
    </com.example.pintu.view.GamePintuLayout>

    <LinearLayout
        android:id="@+id/score_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp" >

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/id_level"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/textbg"
            android:gravity="center"
            android:padding="4dp"
            android:text="lv0" />

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/id_highest"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/textbg"
            android:gravity="center"
            android:padding="4dp"
            android:text="最高:0" />

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/id_score"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/textbg"
            android:gravity="center"
            android:padding="4dp"
            android:text="分数:0" />

        <TextView
            android:id="@+id/id_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/textbg"
            android:gravity="center"
            android:padding="4dp"
            android:text="120" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gly"
        android:layout_margin="3dp" >

        <Button
            android:layout_margin="10dp"
            android:id="@+id/id_new_game"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg_selector"
            android:gravity="center"
            android:padding="4dp"
            android:text="新游戏" />

        <Button
            android:layout_margin="10dp"
            android:id="@+id/id_shuffle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg_selector"
            android:gravity="center"
            android:padding="4dp"
            android:text="打乱" />

        <Button
            android:layout_margin="10dp"
            android:id="@+id/id_pause"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg_selector"
            android:gravity="center"
            android:padding="4dp"
            android:text="开始" />

        <Button
            android:layout_margin="10dp"
            android:id="@+id/id_srcimg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg_selector"
            android:gravity="center"
            android:padding="4dp"
            android:text="原图" />
    </LinearLayout>

</RelativeLayout>